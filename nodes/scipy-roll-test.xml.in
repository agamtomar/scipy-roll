<![CDATA[#!/usr/bin/perl -w
# scipy roll installation test.  Usage:
# scipy.t [nodetype]
#   where nodetype is one of "Compute", "Dbnode", "Frontend" or "Login"
#   if not specified, the test assumes either Compute or Frontend

use Test::More qw(no_plan);

my $appliance = $#ARGV >= 0 ? $ARGV[0] :
                -d '/export/rocks/install' ? 'Frontend' : 'Compute';
my $installedOnAppliancesPattern = '.';
my $isInstalled = -d '/opt/scipy';
my $output;

my @MODULES = (
  'IPython', 'matplotlib', 'nose', 'numpy', 'pyfits', 'pytz', 'scipy'
);

my $TESTFILE = 'tmpscipy';

open(OUT, ">$TESTFILE.sh");
print OUT <<END;
#!/bin/bash
if test -f /etc/profile.d/modules.sh; then
  . /etc/profile.d/modules.sh
  module load ROLLCOMPILER
fi
export PYTHONPATH=ROLLPYTHONLIB:\${PYTHONPATH}
ROLLPYTHONBIN <<ENDPY
import \$1
help(\$1)
print \$1.__version__
ENDPY
END
close(OUT);

# scipy-common.xml
if($appliance =~ /$installedOnAppliancesPattern/) {
  ok($isInstalled, 'scipy installed');
} else {
  ok(! $isInstalled, 'scipy not installed');
}
SKIP: {

  skip 'scipy not installed', int(@MODULES) + 1 if ! $isInstalled;
  my @missingLinks;
  foreach my $f(glob("/opt/scipy/lib*/python*/site-packages/*")) {
    my $link = $f;
    $link =~ s#.*/#ROLLPYTHONLIB/#;
    push(@missingLinks, $link) if ! -l $link;
  }
  ok(int(@missingLinks) == 0, 'all scipy libs linked');
  foreach my $module(@MODULES) {
    `bash $TESTFILE.sh $module 2>&1`;
    ok($? == 0, "$module module installed");
  }

}

# scipy-doc.xml
SKIP: {
  skip 'not server', 1 if $appliance ne 'Frontend';
  ok(-d '/var/www/html/roll-documentation/scipy', 'doc installed');
}

`rm -f $TESTFILE*`;
]]>
